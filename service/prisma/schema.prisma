generator client {
  provider = "prisma-client-js"
}



datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:Soconacostela2022@localhost:5432/database"
}



model User {

	id Int @id @default(autoincrement())
  
  userName String @unique
  password String 
  status Boolean

  accountId Int @unique
  account Account @relation(fields: [accountId], references: [id])

  activeSession ActiveSections[]

}



model Account {

  id Int @id @default(autoincrement())

  balance Decimal @default(100)

  saidas Transaction[] @relation("saidas")

  entradas     Transaction[] @relation("entradas")


  user User[]

}


model Transaction {

  id Int @id @default(autoincrement())

  value         Float
  createdAt     DateTime @default(now())


  sourceId      Int
  source        Account   @relation("saidas", fields: [sourceId], references: [id])


  destinationId Int
  destination   Account   @relation("entradas", fields: [destinationId], references: [id])
 
}


model ActiveSections {

  id       Int  @id @default(autoincrement())
  authorId Int
  author   User @relation(fields: [authorId], references: [id])

  startSession DateTime @default(now())
  endSession DateTime
  
}
